<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presenter.MainActivity">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F4F4F4" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_nav_home"
            style="@style/rb_nav_style"
            android:checked="true"
            android:drawableTop="@drawable/ic_nav_home" />

        <RadioButton
            android:id="@+id/rb_nav_weitao"
            style="@style/rb_nav_style"
            android:drawableTop="@drawable/ic_nav_weitao" />

        <RadioButton
            android:id="@+id/rb_nav_ask"
            style="@style/rb_nav_style"
            android:drawableTop="@drawable/ic_nav_ask" />

        <RadioButton
            android:id="@+id/rb_nav_cart"
            style="@style/rb_nav_style"
            android:drawableTop="@drawable/ic_nav_cart" />

        <RadioButton
            android:id="@+id/rb_nav_my"
            style="@style/rb_nav_style"
            android:drawableTop="@drawable/ic_nav_my" />
    </RadioGroup>
</LinearLayout>
